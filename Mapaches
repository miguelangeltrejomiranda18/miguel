    <script>
        // Funci√≥n principal de c√°lculo
        function calcular() {
            const sistema = document.getElementById('sistema').value;
            const operacion = document.getElementById('operacion').value;
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            const resultadoDiv = document.getElementById('resultado');

            if (isNaN(num1) || isNaN(num2)) {
                resultadoDiv.textContent = "Por favor, ingresa n√∫meros v√°lidos.";
                return;
            }

            let resultadoDecimal;
            switch (operacion) {
                case 'suma':
                    resultadoDecimal = num1 + num2;
                    break;
                case 'resta':
                    resultadoDecimal = num1 - num2;
                    break;
                case 'multiplicacion':
                    resultadoDecimal = num1 * num2;
                    break;
                case 'division':
                    if (num2 === 0) {
                        resultadoDiv.textContent = "Error: No se puede dividir entre cero.";
                        return;
                    }
                    resultadoDecimal = num1 / num2;
                    break;
                default:
                    resultadoDecimal = 0;
            }

            // Convertir resultado al sistema mesoamericano seleccionado
            const resultadoMesoamericano = convertirAMesoamericano(resultadoDecimal, sistema);
            resultadoDiv.innerHTML = `
                Resultado en decimal: ${resultadoDecimal.toFixed(2)}<br>
                Resultado en sistema ${sistema}: ${resultadoMesoamericano}
            `;
        }

        // Funci√≥n de conversi√≥n a sistemas mesoamericanos
        function convertirAMesoamericano(numero, sistema) {
            numero = Math.round(numero); // Redondear a entero para simplificar la conversi√≥n
            if (numero < 0) return "N√∫mero negativo (no soportado en sistemas tradicionales)";

            if (sistema === 'maya') {
                return convertirAMaya(numero);
            } else if (sistema === 'azteca') {
                return convertirAAzteca(numero);
            }
            return "Sistema no soportado";
        }

        // Conversi√≥n a sistema maya
        function convertirAMaya(numero) {
            if (numero === 0) return "üêå  (Concha - 0)";

            const simbolos = {
                1: "‚ö´ (Punto)",
                5: "ùã• (Raya)",
                20: "üö© √ó200",
                400: "ü™∂ √ó400",
                8000: "üíº√ó8000"
            };

            let resultado = [];
            let divisores = [8000, 400, 20, 1];

            divisores.forEach(div => {
                const cantidad = Math.floor(numero / div);
                if (cantidad > 0) {
                    if (div === 1) {
                        // Desglosar en rayas y puntos
                        const rayas = Math.floor(cantidad / 5);
                        const puntos = cantidad % 5;
                        if (rayas > 0) resultado.push(`${rayas} ${simbolos[5]}`);
                        if (puntos > 0) resultado.push(`${puntos} ${simbolos[1]}`);
                    } else {
                        resultado.push(`${cantidad} ${simbolos[div]}`);
                    }
                    numero = numero % div;
                }
            });

            return resultado.join(" + ");
        }

        // Conversi√≥n a sistema azteca
        function convertirAAzteca(numero) {
            if (numero === 0) return "S√≠mbolo de 0 (no ten√≠a s√≠mbolo √∫nico, se representaba con vac√≠o)";

            const simbolos = {
                1: "‚óã (Unidad)",
                20: "üü¢ (Veintena)",
                400: "üü° (Cuatrocientos)",
                8000: "üî¥ (Ocho mil)"
            };

            let resultado = [];
            let divisores = [8000, 400, 20, 1];

            divisores.forEach(div => {
                const cantidad = Math.floor(numero / div);
                if (cantidad > 0) {
                    resultado.push(`${cantidad} ${simbolos[div]}`);
                    numero = numero % div;
                }
            });

            return resultado.join(" + ");
        }

        // Generar link de compartici√≥n (funciona al guardar el archivo)
        window.onload = function() {
            const shareLink = document.getElementById('shareLink');
            // Si el archivo est√° en un servidor, se usar√° la URL completa. Si es local, se muestra la ruta del archivo.
            if (window.location.href.includes('file://')) {
                shareLink.textContent = "Para compartir, sube este archivo a un hosting gratuito (como GitHub Pages, Netlify o Vercel) y usa el link que te den. Si lo abres localmente, tus compa√±eros necesitar√°n tener el archivo tambi√©n.";
            } else {
                shareLink.textContent = window.location.href;
            }
        }

        // Funci√≥n para copiar el link
        function copiarLink() {
            const shareLink = document.getElementById('shareLink').textContent;
            navigator.clipboard.writeText(shareLink)
                .then(() => alert("Link copiado exitosamente!"))
                .catch(() => alert("Error al copiar el link. Por favor, c√≥pialo manualmente."));
        }
    </script>
